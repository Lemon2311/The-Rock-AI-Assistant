{
  "name": "the-rock-ai-assistant",
  "displayName": "The Rock AI Assistant",
  "description": "The Rock AI Assistant for your everyday coding needs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "main": "./extension.js",
  "activationEvents": [
    "onView:the-rock-ai-assistant.sidebarWebview",
    "onCommand:the-rock-ai-assistant.helloWorld",
    "onCommand:the-rock-ai-assistant.inputCommand"
  ],
  "contributes": {
    "commands": [
      {
        "command": "the-rock-ai-assistant.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "the-rock-ai-assistant.inputCommand",
        "title": "Input Command"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "theRockAiAssistant",
          "title": "The Rock AI Assistant",
          "icon": "media/rock-icon.svg"
        }
      ]
    },
    "views": {
      "theRockAiAssistant": [
        {
          "type": "webview",
          "id": "theRockAiAssistant.sidebarWebview",
          "name": "The Rock AI Assistant Sidebar",
          "icon": "media/webview-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
